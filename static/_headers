# This file configures HTTP headers for Cloudflare Pages.
# For more details, see: https://developers.cloudflare.com/pages/platform/headers/

/*
  # Content Security Policy (CSP)
  # Helps prevent cross-site scripting (XSS) and other injection attacks.
  # The 'unsafe-inline' for scripts and styles is often necessary for Docusaurus
  # but can be further restricted if you customize your build.
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; object-src 'none'; frame-ancestors 'none'

  # Prevents browsers from MIME-sniffing a response away from the declared content-type.
  X-Content-Type-Options: nosniff

  # Protects against clickjacking attacks.
  X-Frame-Options: DENY

  # Disables the outdated XSS protection filter in browsers, as a strong CSP is preferred.
  X-XSS-Protection: 0

  # Controls how much referrer information is sent with requests.
  Referrer-Policy: strict-origin-when-cross-origin

  # Disables browser features that are not needed for a documentation site.
  Permissions-Policy: accelerometer=(), autoplay=(), camera=(), cross-origin-isolated=(), display-capture=(), encrypted-media=(), fullscreen=(), geolocation=(), gyroscope=(), keyboard-map=(), magnetometer=(), microphone=(), midi=(), payment=(), picture-in-picture=(), publickey-credentials-get=(), screen-wake-lock=(), sync-xhr=(), usb=(), web-share=(), xr-spatial-tracking=()
*/ 